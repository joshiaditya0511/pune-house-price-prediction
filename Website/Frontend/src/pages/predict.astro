---
import BaseLayout from '../layouts/BaseLayout.astro';
import PredictionForm from '../components/PredictionForm';
---

<BaseLayout title="Property Price Prediction - PuneProp Predict">
  <!-- Hero Section with Image Banner -->
  <section class="relative">
    <!-- Background Image -->
    <div class="h-56 md:h-110 bg-cover bg-center bg-no-repeat relative" 
         style="background-image: url('/background-image.jpg');">
      <!-- Dark overlay -->
      <div class="absolute inset-0 bg-black/50"></div>
      
      <!-- Content -->
      <div class="relative h-full flex max-sm:items-center justify-center text-center text-white px-4">
        <div class="max-w-4xl mt-12 mx-auto space-y-4">
          <h1 class="text-4xl md:text-5xl font-bold">
            Pune Property Price Prediction
          </h1>
          <p class="text-xl md:text-2xl text-gray-200 font-semibold">
            Machine learning-based house price estimation for Pune properties
          </p>
        </div>
      </div>
    </div>

    <!-- Overlapping Form Container -->
    <div class="relative -mt-48 max-sm:mt-4 z-10 max-w-4xl mx-auto px-4">
      <PredictionForm client:load />
    </div>
  </section>

  <!-- Simple How It Works Section -->
  <section class="py-16 mt-16 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2 class="text-2xl font-bold text-gray-800 mb-8">How It Works</h2>
      
      <div class="grid md:grid-cols-3 gap-8">
        <div class="space-y-3">
          <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mx-auto">
            <span class="text-blue-600 font-bold text-xl">1</span>
          </div>
          <h3 class="font-semibold text-gray-800">Enter Property Details</h3>
          <p class="text-gray-600 text-sm">Provide location, size, and property features</p>
        </div>

        <div class="space-y-3">
          <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mx-auto">
            <span class="text-blue-600 font-bold text-xl">2</span>
          </div>
          <h3 class="font-semibold text-gray-800">AI Analysis</h3>
          <p class="text-gray-600 text-sm">ONNX model processes your input data</p>
        </div>

        <div class="space-y-3">
          <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mx-auto">
            <span class="text-blue-600 font-bold text-xl">3</span>
          </div>
          <h3 class="font-semibold text-gray-800">Get Estimate</h3>
          <p class="text-gray-600 text-sm">Receive price prediction and similar properties</p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>