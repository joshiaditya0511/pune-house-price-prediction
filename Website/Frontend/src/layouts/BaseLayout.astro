---
// src/layouts/BaseLayout.astro
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
}

const {
  title = "PuneProp Predict",
  description = "Predicting Pune house prices with AI",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Umami Analytics -->
    <script 
        is:inline
        defer 
        src="/script.js" 
        data-website-id="65ab6caf-0ea8-47e4-9c06-ac5e5567fad2"
        data-domains="pune.adityajoshi.in"
    >
    </script>
  </head>
  <body class="d-flex flex-column min-vh-100">
    <Header />
    <!-- Add padding-top to main content area to offset fixed navbar -->
    <main class="flex-shrink-0" style="padding-top: 70px;">
      <slot />
    </main>
    <Footer />

  </body>
</html>
