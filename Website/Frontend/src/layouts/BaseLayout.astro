---
// src/layouts/BaseLayout.astro
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.scss"; // Import your SCSS file

interface Props {
  title: string;
  description?: string;
}

const {
  title = "PuneProp Predict",
  description = "Predicting Pune house prices with AI",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="d-flex flex-column min-vh-100">
    <Header />
    <!-- Add padding-top to main content area to offset fixed navbar -->
    <main class="flex-shrink-0" style="padding-top: 70px;">
      <slot />
       <!-- The content from your pages (e.g., index.astro) goes here -->
    </main>
    <Footer />

    <!-- Bootstrap JS Bundle (includes Popper) - Required for dropdowns, offcanvas, etc. -->
    <!-- Make sure Bootstrap is installed: npm install bootstrap -->
    <script>
      import "bootstrap/dist/js/bootstrap.bundle.min.js";
    </script>
  </body>
</html>
