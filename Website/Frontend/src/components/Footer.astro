---
// src/components/Footer.astro
const currentYear = new Date().getFullYear();
const personalSiteUrl = "https://www.adityajoshi.in";
const linkedinUrl = "https://linkedin.com/in/joshiaditya0511";
const emailAddress = "joshiaditya0511@gmail.com";
const githubUrl = "https://github.com/joshiaditya0511/pune-house-price-prediction";

const quickLinks = [
  { href: "/", text: "Home" },
  { href: "/predict", text: "Predictor" },
  { href: "/insights", text: "Insights" },
  { href: "/about", text: "About" },
];
---

<footer class="bg-slate-900 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      
      <!-- Brand Section -->
      <div class="lg:col-span-2">
        <div class="flex items-center space-x-2 mb-4">
          <svg class="w-8 h-8 text-amber-400" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
          </svg>
          <h3 class="text-xl font-bold">PuneProp Predict</h3>
        </div>
        <p class="text-slate-300 mb-4 max-w-md">
          AI-powered house price insights for Pune. Get accurate property valuations using advanced machine learning algorithms trained on comprehensive market data.
        </p>
        <div class="flex items-center space-x-2 text-sm text-slate-400">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <span>Trusted by property enthusiasts</span>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="text-lg font-semibold mb-4 text-white">Quick Links</h4>
        <ul class="space-y-2">
          {quickLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-slate-300 hover:text-white transition-colors duration-200 text-sm"
              >
                {link.text}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="text-lg font-semibold mb-4 text-white">Connect</h4>
        <div class="space-y-3">
          <a
            href={`mailto:${emailAddress}`}
            class="flex items-center space-x-2 text-slate-300 hover:text-white transition-colors duration-200 text-sm"
            target="_blank"
            rel="noopener noreferrer"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
            </svg>
            <span>Email</span>
          </a>
          
          <a
            href={githubUrl}
            class="flex items-center space-x-2 text-slate-300 hover:text-white transition-colors duration-200 text-sm"
            target="_blank"
            rel="noopener noreferrer"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"/>
            </svg>
            <span>GitHub</span>
          </a>

          <a
            href={linkedinUrl}
            class="flex items-center space-x-2 text-slate-300 hover:text-white transition-colors duration-200 text-sm"
            target="_blank"
            rel="noopener noreferrer"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.338 16.338H13.67V12.16c0-.995-.017-2.277-1.387-2.277-1.39 0-1.601 1.086-1.601 2.207v4.248H8.014v-8.59h2.559v1.174h.037c.356-.675 1.227-1.387 2.526-1.387 2.703 0 3.203 1.778 3.203 4.092v4.711zM5.005 6.575a1.548 1.548 0 11-.003-3.096 1.548 1.548 0 01.003 3.096zm-1.337 9.763H6.34v-8.59H3.667v8.59zM17.668 1H2.328C1.595 1 1 1.581 1 2.298v15.403C1 18.418 1.595 19 2.328 19h15.34c.734 0 1.332-.582 1.332-1.299V2.298C19 1.581 18.402 1 17.668 1z" clip-rule="evenodd"/>
            </svg>
            <span>LinkedIn</span>
          </a>

          <a
            href={personalSiteUrl}
            class="flex items-center space-x-2 text-slate-300 hover:text-white transition-colors duration-200 text-sm"
            target="_blank"
            rel="noopener noreferrer"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM4.332 8.027a6.012 6.012 0 011.912-2.706C6.512 5.73 6.974 6 7.5 6A1.5 1.5 0 019 7.5V8a2 2 0 004 0 2 2 0 011.523-1.943A5.977 5.977 0 0116 10c0 .34-.028.675-.083 1H15a2 2 0 00-2 2v2.197A5.973 5.973 0 0110 16v-2a2 2 0 00-2-2 2 2 0 01-2-2 2 2 0 00-1.668-1.973z" clip-rule="evenodd"/>
            </svg>
            <span>Website</span>
          </a>
        </div>
      </div>
    </div>

    <!-- Bottom Border -->
    <div class="border-t border-slate-700 mt-8 pt-8 flex flex-col sm:flex-row justify-between items-center">
      <p class="text-slate-400 text-sm">
        &copy; {currentYear} 
        <a
          href={personalSiteUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="text-amber-400 hover:text-amber-300 transition-colors"
        >
          Aditya Joshi
        </a>
        . All Rights Reserved.
      </p>
      <div class="flex items-center space-x-4 mt-4 sm:mt-0">
        <div class="flex items-center space-x-1 text-xs text-slate-500">
          <span>Built with</span>
          <svg class="w-4 h-4 text-red-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"/>
          </svg>
          <span>using Astro & React</span>
        </div>
      </div>
    </div>
  </div>
</footer>